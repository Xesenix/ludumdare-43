    "reflect-metadata": "^0.1.13",
    "terser-webpack-plugin": "^1.3.0",
    "ts-loader": "^6.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3",
    "vis": "^4.21.0",
    "webpack": "~4.34.0",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-dev-server": "^3.7.2",
    "webpack-pwa-manifest": "^4.0.0",
    "workbox-webpack-plugin": "^4.3.1",
    "xes-webpack-core": "^0.8.1"
  },
  "apps": {
    "game": {
      "rootDir": "game",
      "outDir": "dist/game",
      "main": [
        "main.ts"
      ],
      "moduleImportPaths": [
        "src"
      ],
      "test": "main.test.ts",
      "templateData": {
        "title": "The greatest sacrifice",
        "author": "Xesenix",
        "themeColor": "#ffffff"
      },
      "assets": [
        "assets"
      ],
      "template": "templates/index.html",
      "styles": [
        "styles/main.scss"
      ],
      "stylesImportPaths": [
        "game/styles",
        "styles"
      ],
      "vendor": []
    },
    "benchmarks": {
      "rootDir": "benchmarks",
      "outDir": "dist/benchmarks",
      "main": [
        "main.ts"
      ],
      "moduleImportPaths": [
        "games/src",
        "src"
      ],
      "test": "main.test.ts",
      "templateData": {
        "title": "Benchmarks",
        "author": "Xesenix",
        "themeColor": "#ffffff"
      },
      "assets": [
        "assets"
      ],
      "template": "templates/index.html",
      "styles": [
        "styles/main.scss"
      ],
      "stylesImportPaths": [
        "benchmark/styles",
        "game/styles",
        "styles"
      ],
      "vendor": []
    }
  },
  "devDependencies": {
    "@types/benchmark": "^1.0.31",
    "@types/microtime": "^2.1.0",
    "benchmark": "^2.1.4",
    "microtime": "^3.0.0"
  }
}
